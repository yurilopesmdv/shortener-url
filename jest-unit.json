{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "./coverage",
  "testEnvironment": "node",
  "roots": ["<rootDir>/"],
  "transformIgnorePatterns": ["node_modules/(?!.*nanoid.*)"],
  "moduleNameMapper": { 
    "^nanoid(/async)?$": "<rootDir>/../node_modules/nanoid/index.js"
  }
}